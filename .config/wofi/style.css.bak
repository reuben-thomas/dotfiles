* {
  font-family: Hack Nerd Font Mono;
  font-size: 12px;
  color: #e5e9f0;
}

window {
  background-color: #2e3440;
  border: 4px solid #9d68d9;
  border-radius: 8px;
}

#outer-box {
  margin-bottom: 12px;
}

#input {
  border: none;
  background-color: #2e3440;
  margin: 7px;
  box-shadow: none; /* Remove blue "border" */
}

#inner-box {
  background-color: #2e3440;
  margin: 7px;
  margin-top: 0;
}

#entry {
  padding-left: 10px;
  margin-left: -0px;
  margin-right: -0px;
  border: none;
  outline: none;
}

#img {
  padding-right: 10px;
}

#entry:selected {
  background-color: #44475a;
  border-radius: 6px;
}

#text {
  margin: 2px;
}

/* Hide backspace icon */
.right {
  color: transparent;
}
